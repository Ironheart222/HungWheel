<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuDetails"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter food items below"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#FF2E00"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name of the food"
        android:id="@+id/food_name"
        android:textSize="25dp"
        android:padding="12dp"
        android:layout_marginTop="30dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter price of the food"
        android:id="@+id/food_price"
        android:textSize="25dp"
        android:padding="12dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter quantity of the food"
        android:textSize="25dp"
        android:id="@+id/food_quantity"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginTop="30dp"/>


    <EditText
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:id="@+id/food_description"
        android:hint="Enter description of the food"
        android:textSize="25dp"
        android:background="@drawable/edit_bg"
        android:layout_gravity="center"
        android:padding="12dp"
        android:layout_marginTop="30dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload image"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="#000"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/btn_image"
        android:layout_marginTop="5dp"
        android:background="@drawable/background"
        android:text="Choose File"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btn_foodsubmit"
        android:textSize="20dp"
        android:background="@drawable/bg_color"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_marginTop="20dp"/>


</LinearLayout>